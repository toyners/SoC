<UserControl x:Class="SoC.Harness.PlayAreaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoC.Harness"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Canvas Name="BoardLayer" Height="450" Width="800" Visibility="Hidden"/>

    <Canvas Name="WorkingLayer" Height="450" Width="800" />

    <Canvas Name="ControlLayer" Height="450" Width="800">
      <Button Name="StartGameButton" Canvas.Left="350" Canvas.Top="225" Click="StartButton_Click">Start Game</Button>
    </Canvas>
    
  </Grid>
</UserControl>
