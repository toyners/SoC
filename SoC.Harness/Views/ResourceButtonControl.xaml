<UserControl x:Class="SoC.Harness.Views.ResourceButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoC.Harness.Views"
             mc:Ignorable="d" >
  <Button Click="Button_Click" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverButton}">
    <Image Source="{Binding Path=ImagePath}" />
  </Button>
</UserControl>
